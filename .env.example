# Database Configuration
# Use host.docker.internal to connect to the host machine's PostgreSQL from Docker
# DB_HOST=localhost
DB_HOST=host.docker.internal
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=daily_alu_local
DB_SSLMODE=disable

# Server Configuration
SERVER_PORT=3000
SERVER_ENV=development

# JWT Configuration
JWT_EXPIRY=24
JWT_REFRESH_EXPIRY=120

# Optional: Redis Configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Optional: AWS Configuration (if needed)
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=dailyalu-storage
AWS_SES_SENDER=no-reply@dailyalu.com
